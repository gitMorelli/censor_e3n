    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: png_from_pdf",
            "type": "debugpy",
            "request": "launch",
            //"program": "${workspaceFolder}/src/scripts/png_from_pdf.py",
            "module": "src.scripts.png_from_pdf",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--verbose"
            ]
        },
        {
            "name": "Python Debugger: generate_annotations",
            "type": "debugpy",
            "request": "launch",
            "module": "src.scripts.generate_annotations",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--verbose"
            ]
        },
        {
            "name": "Python Debugger: censor",
            "type": "debugpy",
            "request": "launch",
            "module": "src.scripts.censor",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--verbose",
                "--enlarge_censor_boxes"
                //"--skip_checking",
                //"--skip_aligning"
            ]
        }
    ]
}